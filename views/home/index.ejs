<% if (currentUser !== undefined) { %>
<script>
	var currentUser = {
		id: '<%= currentUser.id %>',
		username: '<%= currentUser.username %>',
		email: '<%= currentUser.email %>',
		first_name: '<%= currentUser.first_name %>',
		createdAt: '<%= currentUser.createdAt %>',
		updatedAt: '<%= currentUser.updatedAt %>'
	};
</script>
<% } %>

<div ng-include="'header/index.tpl.html'"></div>

<div 
	sy-nav-toggle
	id="sy-menu"
	class="sy-nav sy-app sy-effect" 
	ng-class="{'sy-menu-open': syMenuOpen, 'sy-menu-top-open': syMenuTopOpen, 'sy-menu-bottom-open': syMenuBottomOpen }"
>

	<div 
		id="sitenav"
		class="sitenav sy-effect" 
		ui-view="sitenav" 
		ng-mouseleave="syMenuToggleOff()"
	>
	</div><!-- /.sitenav -->

	<div class="sitenav-push">
		<div class="sitenav-push-inner">
			<div class="header" ui-view="header">
			</div><!-- /.header -->

			<div class="overlay" ui-view="overlay">
			</div><!-- /.overlay -->

			<div class="container" ui-view="main">
			</div><!-- /.container -->

			<div class="footer" ui-view="footer">
			</div><!-- /.footer -->
		</div>
	</div>
</div>